<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Removing Actionbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="TextAppearance.Card.TextView.Title2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.Card.TextView.Title3" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Card.TextView.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Card.TextView.Body.Right" parent="TextAppearance.Card.TextView.Title3">
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="CropDetailsCard.Border" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">-2dp</item>
        <item name="android:layout_marginEnd">-2dp</item>
    </style>

    <style name="FullWidthButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="FullWidthTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FertilizerCard.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FertilizerCard.Content.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="FertilizerCard.Content.Value" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="DashBoard.Item.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
        <item name="cardBackgroundColor">@color/colorPrimaryLightBackground</item>
    </style>

    <style name="TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">
            @style/TextInputLayout.Outlined.HintText
        </item>
        <item name="android:textColorHint">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextInputLayout.Outlined.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="RadioButton.Simple.Outlined1" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/radio_text_selected</item>
    </style>

</resources>
